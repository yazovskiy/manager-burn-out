{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "UseSerilog": true
  },
  "ConnectionStrings": {
    "Default": "Data Source=../data/callwellbeing.db"
  },
  "Exolve": {
    "BaseUrl": "https://api.exolve.ru",
    "ApiKey": "${EXOLVE_API_KEY}",
    "AppId": "${EXOLVE_APP_ID}"
  },
  "GigaChat": {
    "BaseUrl": "https://gigachat.devices.sberbank.ru",
    "OAuthToken": "${GIGACHAT_TOKEN}",
    "Model": "GigaChat-Pro"
  },
  "Anomaly": {
    "PauseShare": 0.15,
    "LongCallMin": 10,
    "MinActions": 2,
    "UnansweredShare": 0.3,
    "Sigma": 1.5
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317",
    "ServiceName": "call-wellbeing-api"
  }
}
